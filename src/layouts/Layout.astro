---
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";

interface Props {
  title: string;
  description: string;
  segment: string;
}

const { title, description, segment } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header segment={segment} />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Ibarra+Real+Nova:wght@400;700&family=Public+Sans:wght@400;600&display=swap");

  :root {
    --bg-body: #fafafa;
    --dark-blue: #33323d;
    --cyan: #5fb4a2;
    --dark-cyan: #55a191;
    --red: #f43030;
    --gray: #dcdcde;
    --pale-gray: #e7e7e7;
    --white: #ffffff;

    --ibarra: "Ibarra Real Nova", serif;
    --public-sans: "Public Sans", sans-serif;

    --s-2xl: clamp(35px, 5cqw, 49px);
    --s-xl: clamp(35px, 5cqw, 40px);
    --s-2lg: clamp(22px, 5cqw, 25px);
    --s-lg: clamp(19px, 5cqw, 23px);
    --s-sm: 13px;

    --light: 300;
    --semibold: 600;
    --bold: 700;
  }

  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: inherit;
  }

  body {
    background-color: var(--bg-body);
  }

  img {
    max-width: 100%;
  }

  ul {
    list-style: none;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  button {
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  input,
  textarea {
    border: none;
    outline: none;
  }

  textarea {
    resize: none;
  }

  /* -------------------------------------------------------------------*/

  .container {
    width: 100%;
    max-width: 1110px;
    margin-inline: auto;
  }

  @media (width < 1024px) {
    .container {
      padding-inline: 20px;
    }
  }
</style>
